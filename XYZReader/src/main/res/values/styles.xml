        </item>
        <item name="android:windowReenterTransition" tools:targetApi="lollipop">
            @transition/slide_top
        </item>
        -->
    </style>

    <style name="Theme.Bacon.Article">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->

        <!--
         <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:fragmentExitTransition" tools:targetApi="lollipop">
            @transition/slide_top
        </item>-->
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="toolbarStyle">@style/toolbar</item>

        <!--
         <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:fragmentExitTransition" tools:targetApi="lollipop">
            @transition/slide_top
        </item>-->
    </style>

    <style name="toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="article_title" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/article_margin_8</item>
        <item name="android:layout_marginStart">@dimen/article_margin_8</item>
        <item name="android:layout_marginEnd">@dimen/article_margin_8</item>
        <item name="android:paddingStart">@dimen/article_padding_16</item>
        <item name="android:paddingTop">@dimen/article_padding_16</item>
        <item name="android:paddingEnd">@dimen/article_padding_16</item>
        <item name="android:paddingBottom">@dimen/article_padding_4</item>
        <item name="android:textColor">@color/ltgray</item>
        <item name="android:maxLines">@integer/article_title_maxlines</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="article_subtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/article_margin_8</item>
        <item name="android:layout_marginStart">@dimen/article_margin_8</item>
        <item name="android:layout_marginEnd">@dimen/article_margin_8</item>
        <item name="android:layout_marginBottom">@dimen/article_margin_8</item>
        <item name="android:paddingStart">@dimen/article_padding_16</item>
        <item name="android:paddingEnd">@dimen/article_padding_16</item>
        <item name="android:paddingBottom">@dimen/article_padding_4</item>
        <item name="android:textColor">#6000</item>
        <item name="android:maxLines">@integer/article_subtitle_maxlines</item>
        <item name="android:ellipsize">end</item>
    </style>



    <style name="fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
       <item name="fabSize">normal</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="android:contentDescription">@string/action_share</item>
        <item name="android:src">@drawable/ic_share</item>
        <item name="android:stateListAnimator">@drawable/fab_state_list_anim</item>
        <item name="pressedTranslationZ">@dimen/fab_press_translation_z</item>
        <item name="rippleColor">@color/fab_ripple</item>
    </style>

</resources>
